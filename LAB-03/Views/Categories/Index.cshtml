@model IEnumerable<LAB_03.Models.Category>

<div class="container my-5">
    <h2 class="text-center text-primary fw-bold">📂 Danh sách loại sản phẩm</h2>

    <div class="text-end mb-3">
        <a asp-action="Add" class="btn btn-success">+ Thêm loại mới</a>
    </div>

    <table class="table table-striped table-hover text-center">
        <thead class="table-dark">
            <tr>
                <th>Mã</th>
                <th>Tên</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td class="fw-bold">@category.Id</td>
                    <td>@category.Name</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning btn-sm">✏ Chỉnh sửa</a>
                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm">🗑 Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
