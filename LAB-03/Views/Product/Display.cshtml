<div class="container mt-4">
    <h2 class="text-center">@Model.Name</h2>

    <div class="card shadow-lg p-4 mt-3">
        <div class="row">
            <!-- Hiển thị hình ảnh sản phẩm (nếu có) -->
            <div class="col-md-4 text-center">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="Product Image" class="img-fluid rounded shadow-sm" style="max-width: 250px;">
                }
                else
                {
                    <p class="text-muted">Không có ảnh</p>
                }
            </div>

            <!-- Hiển thị thông tin sản phẩm -->
            <div class="col-md-8">
                <h4 class="text-primary">Giá: @Model.Price.ToString("#,##0") Vnđ</h4>
                <p class="mt-3">@Model.Description</p>

                <div class="mt-4">
                    <a asp-action="Index" class="btn btn-secondary">⬅ Quay lại</a>
                    <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">✏ Sửa</a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        🗑 Xóa
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>