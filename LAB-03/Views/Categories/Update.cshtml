@model LAB_03.Models.Category

<div class="container mt-5">
    <h2 class="text-center text-primary">✏ Cập nhật loại sản phẩm</h2>

    <form asp-action="Update" method="post" class="card p-4 shadow-lg">
        <div asp-validation-summary="All" class="text-danger"></div>

        <input type="hidden" asp-for="Id" />

        <div class="form-group mb-3">
            <label asp-for="Name" class="fw-bold">Tên loại</label>
            <input asp-for="Name" class="form-control" placeholder="Nhập tên loại..." />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success">✅ Lưu</button>
            <a asp-action="Index" class="btn btn-secondary">🔙 Quay lại</a>

            <button type="submit" formaction="@Url.Action("DeleteConfirmed", "Categories", new { id = Model.Id })">
                🗑 Xóa
            </button>
        </div>
    </form>
</div>
